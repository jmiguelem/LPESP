LpEsp factorialCiclica;

Variables:
    var entero i, factorial, n;
     
Funciones:

Esp:
    imprime('Ingresa un valor para encontrar su factorial: ');
    leer(n);
    i = 1;
    factorial = 1;
    si (n == 0):
        imprime('El factorial es 1');
    sino:
        mientras(i < n + 1 ):
        factorial = factorial * i;
        i = i + 1;

        fin;
    fin;

    imprime(factorial);

Pse;