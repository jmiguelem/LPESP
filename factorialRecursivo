LpEsp factorialRecursivo;

Variables:
    var entero resultado, n;
     
Funciones:

    entero factorial(entero x):
    
            Variables:
                var entero temporalLocal;
            Bloque:
                si (x < 2):
                    temporalLocal = 1;
                sino:
                    temporalLocal = x * factorial(x - 1);
                fin;
                
                Regresa temporalLocal;
                


Esp:
    imprime('Ingresa un valor para encontrar su factorial: ');
    leer(n);
    resultado = factorial(n);
    imprime(resultado);

Pse;