LpEsp factorialRecursivo;

Variables:
    var entero resultado;
     
Funciones:

    entero factorial(entero x):
    
            Variables:
                var entero temporalLocal;
            Bloque:
                si (x < 2):
                    temporalLocal = 1;
                sino:
                    temporalLocal = x * factorial(x - 1);
                fin;
                
                Regresa temporalLocal;
                


Esp:
    resultado = factorial(3);
    imprime(resultado);

Pse;